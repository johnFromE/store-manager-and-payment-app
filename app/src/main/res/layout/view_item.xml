<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/work_p"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@color/white"

    >
    <ImageButton
        android:id="@+id/close_btn_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        android:background="@color/zxing_transparent"
        app:tint="@color/my_gray" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item ID"
            android:textColor="@color/my_gray"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/diloge_item_id"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/gary_box"
            android:layout_marginBottom="15dp"
            android:textColor="@color/my_gray"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textColor="@color/my_gray"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/dilog_item"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/gary_box"
            android:layout_marginBottom="15dp"
            android:textColor="@color/my_gray"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="@color/my_gray"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/dilog_item_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/gary_box"
            android:layout_marginBottom="15dp"
            android:textColor="@color/my_gray"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iItem Price"
            android:textColor="@color/my_gray"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/dilog_item_price"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/gary_box"
            android:layout_marginBottom="15dp"
            android:textColor="@color/my_gray"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saleing Price"
            android:textColor="@color/my_gray"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/dilog_Saleing_price"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/gary_box"
            android:layout_marginBottom="15dp"
            android:textColor="@color/my_gray"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Amount"
            android:textColor="@color/my_gray"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/dilog_amount"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/gary_box"
            android:layout_marginBottom="15dp"
            android:textColor="@color/my_gray"
            android:paddingLeft="10dp"
            />
        <Button
            android:id="@+id/update_dilog_button"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_button_box"
            android:text="Update"
            android:textSize="20dp"
            />


    </LinearLayout>
</RelativeLayout>