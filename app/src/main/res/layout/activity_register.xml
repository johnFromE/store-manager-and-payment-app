<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/white">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <ImageButton
            android:src="@drawable/back_button"
            android:layout_width="30dp"
            android:id="@+id/back_btn"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/zxing_transparent"
            android:layout_marginBottom="-50dp"
            app:tint="@color/my_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Register"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#FD0092FF"
                android:layout_gravity="center"/>

            <TextView
                android:textColor="@color/my_black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Username"
                android:layout_marginTop="15dp"/>

            <EditText
                android:text=""
                android:textColor="@color/my_black"
                android:id="@+id/username"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/text_input_box"
                android:paddingLeft="10dp"
                android:textSize="20dp"/>

            <TextView
                android:textColor="@color/my_black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="password"
                android:layout_marginTop="15dp"/>

            <EditText

                android:paddingLeft="10dp"
                android:id="@+id/password"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/text_input_box"
                android:textColor="@color/my_black"
                android:text=""
                android:textSize="20dp"/>
            <TextView
                android:textColor="@color/my_black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="confirm password"
                android:layout_marginTop="15dp"/>

            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/confirm_password"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/text_input_box"
                android:textColor="@color/my_black"
                android:textSize="20dp"
                android:text=""/>

            <TextView
                android:textColor="@color/my_black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/text_input_box"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+251"
                    android:textColor="@color/my_gray"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/phone_number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/my_black"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:text=""
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:background="@color/zxing_transparent"
                    android:focusable="false"
                    />
            </LinearLayout>

            <TextView
                android:textColor="@color/my_black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="CBE birr PIN"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/cbe_pin"
                android:paddingLeft="10dp"
                android:textColor="@color/my_black"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/text_input_box"
                android:textSize="20dp"
                android:text=""/>

            <TextView
                android:textColor="@color/my_black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="User Type"
                android:layout_marginTop="15dp"/>
            <Spinner
                android:id="@+id/spinner_one"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:entries="@array/user_list"
                android:background="@drawable/text_input_box"/>
            <TextView
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text=""
                android:textColor="@color/read"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>
            <Button
                android:id="@+id/register_btn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Register"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_blue_button"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>