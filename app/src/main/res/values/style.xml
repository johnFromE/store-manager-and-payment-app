<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
       <item name="android:windowBackground">@drawable/backgound_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="23">@color/little_white</item>
        <item name="android:navigationBarColor" tools:targetApi="23">@color/little_white</item>
        <item name="android:windowAnimationStyle">@style/my_animation</item>
    </style>
    <style name="my_animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cookieTitleColor">@color/default_title_color</item>
        <item name="cookieMessageColor">@color/default_message_color</item>
        <item name="cookieActionColor">@color/default_action_color</item>
        <item name="cookieBackgroundColor">@color/black</item>
        <item name="cookiePadding">24dp</item>
        <item name="cookieTitleSize">24sp</item>
        <item name="cookieMessageSize">16sp</item>
        <item name="cookieActionSize">18sp</item>
    </style>
</resources>